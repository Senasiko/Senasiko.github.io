html
  head
    block title
      title #{title}
    block style
      link(href=`${rootPath}/${staticPath}/css/app.css`, rel='stylesheet')
      link(href=`${rootPath}/${staticPath}/css/react.main.css`, rel='stylesheet')
      link(href=`${rootPath}/${staticPath}/css/markdown.css`, rel='stylesheet')
      link(href=`${rootPath}/${staticPath}/css/main.css`, rel='stylesheet')
      style.
        #userMsgMask {
          /*-webkit-mask-image: url('#{rootPath}/#{staticPath}/img/mask.png');*/
        }
    block script
      script.
        window.rootPath = '#{rootPath}';
      script(src=`${rootPath}/${staticPath}/js/jquery-3.3.1.min.js`)
      script(src=`${rootPath}/${staticPath}/js/router.js`)
      script(src=`${rootPath}/${staticPath}/js/react.main.js`)
      script(src=`${rootPath}/${staticPath}/js/vue.manifest.js`)
      script(src=`${rootPath}/${staticPath}/js/vue.vendor.js`)
      script(src=`${rootPath}/${staticPath}/js/vue.app.js`)
  body
    block loading
      #loading
        i(class='anticon anticon-spin anticon-loading')
    block left
      #userMsgMask
        #userMsg
        - var msgs = JSON.stringify(user.msgs);
        script(type="text/javascript").
          $(document).ready(function () {
            $('#loading').hide();
            var userMsg = window.vueCom.userMsg('#userMsg', {
              data: {
                img: '#{user.img}',
                msgs: !{msgs}
              }
            })
          });
    block content
    block foot
      script.
        document.body.innerHeight = window.innerHeight;
        document.body.innerWidth = window.innerWidth;

